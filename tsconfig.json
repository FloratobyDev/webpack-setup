{
  "include": [
    "./packages/client/**/*.ts",
    "./packages/client/**/*.tsx",
    "./packages/server/**/*.ts",
    "./packages/server/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "webpack.*.js",
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  }
}