{
  "include": [
    "./packages/client/**/*.ts",
    "./packages/client/**/*.tsx",
    "./packages/server/**/*.ts",
    "./packages/server/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "webpack.*.js",
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["./packages/client/*"],
      "@server/*": ["./packages/server/*"],
    },
    "noImplicitAny": false,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  }
}